<% provide :title, t("account.log_in") %>
<h1 style="margin-top: 50px;margin-bottom: 30px;"><%= t "account.log_in" %></h1>

<div class="row log-in">
  <div class="col-md-6 col-md-offset-3" style="line-height: 2;">
    <%= form_for :session, url: login_path do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= link_to "(forgot password)", new_password_reset_path %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me, class: "icon" %>
        <span><%= t "home.remember_me" %></span>
      <% end %>

      <%= f.submit t("account.log_in"), class: "btn btn-primary" %>
    <% end %>

    <p style="font-size: 1em;margin-top: 8px;"><%= t("account.new_user") %><%= link_to t("home.signup"), signup_path %></p>
  </div>
</div>
